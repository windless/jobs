
- provide :title, '登录'

.form-wrapper.login
  %fieldset
    %legend 登录
    = form_for(:session, url: sessions_path, html: { class: 'form-horizontal' }) do |f|
      .control-group
        = f.label :email, 'Email', class: 'control-label'
        .controls
          = f.email_field :email
      .control-group
        = f.label :password, '密码', class: 'control-label'
        .controls
          = f.password_field :password
      .pull-right
        = f.submit '登录', class: 'btn btn-primary'
